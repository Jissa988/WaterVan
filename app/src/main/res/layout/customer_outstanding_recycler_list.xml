<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:background="@color/white"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="5"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outcust_name"
                    android:text="Alexander lll of Macadon"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/user_ouline16"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="05dp">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outcust_mobile"
                    android:text="+91 3265987410"
                    android:drawableLeft="@drawable/telephone_outline16"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                </TextView>
                <view class="android.widget.TextView"
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#C2C2C2"
                    android:layout_margin="05dp"
                    >
                </view>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outcust_adress"
                    android:text="B15,local area"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/location_outline16"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="05dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Outstanding Amount"
                    android:gravity="left"
                    android:drawableLeft="@drawable/dollar_outline16"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    >

                </TextView>
                <TextView
                    android:id="@+id/outcredit_amout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="679898"
                    android:textColor="@color/green"
                    android:layout_weight="1">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="right"

                >

                <Button
                    android:id="@+id/outbtn_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:background="@drawable/action_button"
                    android:text="Collect"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp">

                </Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>